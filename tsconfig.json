{
	"compilerOptions": {
		"lib": [
			"dom",
			"esnext"
		],
		"moduleResolution": "node",
		"target": "es2017",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"pretty": true
	},
	"include": [
		"./typings.d.ts",
		"src/**/*"
	],
	"awesomeTypescriptLoaderOptions": {
		"inlineSourceMap": true,
		"sourceMap": false,
		"noEmitOnError": true
	}
}
